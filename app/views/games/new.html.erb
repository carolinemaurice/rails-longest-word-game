<div class="newContainer">

  <h1>New game</h1>

  <div class="d-flex">
    <% @letters.each do|letter| %>
      <p class="letterCase"><%=letter%></p>
    <% end %>
  </div>

  <p>What is the longest word you can find?</p>
  <form action="/score" method="post" data-turbo="false">
    <div class="input-group">
      <input type="text" name="word" class="form-control" aria-describedby="sendWord">
      <input type="submit" class="input-group-text" id="sendWord" value="Play">
    </div>
    <%= hidden_field_tag :grid, @letters %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>

</div>
